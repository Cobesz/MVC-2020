{
  "name": "nestjs-mvc",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build-css": "node-sass --include-path scss scss/style.scss src/public/css/style.css",
    "watch-css": "nodemon -e scss -x \"npm run build-css\"",
    "format": "prettier --write '**/*.{ts,tsx,js,jsx,json,md,html}'",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "concurrently --handle-input \"wait-on dist/main.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:generate": "yarn run typeorm migration:generate -n",
    "migration:create": "yarn run typeorm migration:create -n",
    "migration:run": "yarn run typeorm migration:run"
  },
  "dependencies": {
    "@nestjs/common": "^6.2.4",
    "@nestjs/core": "^6.2.4",
    "@nestjs/passport": "^6.1.0",
    "@nestjs/platform-express": "^6.2.4",
    "@nestjs/typeorm": "^6.1.3",
    "@nestjsx/crud": "^4.2.0",
    "@nestjsx/crud-typeorm": "^4.2.0",
    "bcrypt": "^3.0.6",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.10.0",
    "connect-flash": "^0.1.1",
    "csurf": "^1.10.0",
    "dotenv": "^8.1.0",
    "express-handlebars": "^3.1.0",
    "express-session": "^1.17.0",
    "hbs": "^4.0.4",
    "helmet": "^3.21.1",
    "jsonwebtoken": "^8.5.1",
    "mysql2": "^1.7.0",
    "nest-router": "^1.0.9",
    "node-sass-middleware": "latest",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^7.12.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^2.6.3",
    "rxjs": "^6.5.2",
    "sequelize": "^5.18.4",
    "sequelize-typescript": "^1.0.0",
    "typeorm": "^0.2.19",
    "@nestjs/jwt": "latest"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.2.4",
    "@types/connect-flash": "0.0.35",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/express-handlebars": "0.0.33",
    "@types/express-session": "^1.15.15",
    "@types/hbs": "^4.0.1",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "@types/node-sass": "^4.11.0",
    "@types/sequelize": "^4.28.4",
    "@types/supertest": "^2.0.7",
    "concurrently": "^4.1.0",
    "jest": "^24.8.0",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.1",
    "prettier": "^1.17.1",
    "supertest": "^4.0.2",
    "ts-jest": "24.0.2",
    "ts-node": "8.2.0",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.16.0",
    "typescript": "3.4.5",
    "wait-on": "^3.2.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
